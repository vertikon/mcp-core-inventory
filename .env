# MCP Core Inventory Production Environment Variables
# Version: 1.2.0

# Database Configuration
DB_PASSWORD=postgres_production_secure_password_2025
DB_HOST=postgres-prod
DB_PORT=5432
DB_NAME=mcp_core_inventory

# Redis Configuration
REDIS_PASSWORD=redis_production_secure_password_2025
REDIS_HOST=redis-prod
REDIS_PORT=6379
REDIS_DB=0

# NATS Configuration
NATS_USER=nats_user
NATS_PASS=nats_production_secure_password_2025
NATS_URL=nats://nats-prod:4222

# Security Configuration
JWT_SECRET=super_secure_jwt_secret_key_for_production_v1_2_0
CORS_ALLOWED_ORIGINS=https://app.vertikon.com,https://api.vertikon.com

# AI Configuration
AI_API_KEY=your_ai_api_key_here

# Application Configuration
ENVIRONMENT=production
PORT=8080
LOG_LEVEL=info
LOG_FORMAT=json

# Inventory Configuration (BLOCO-1)
INVENTORY_RESERVATION_TTL=300
INVENTORY_MAX_CONCURRENT_RESERVATIONS=1000
INVENTORY_ENABLE_RACE_CONDITION_DETECTION=true
INVENTORY_LOCK_TIMEOUT=5000

# Telemetry Configuration
TELEMETRY_TRACING_ENDPOINT=http://jaeger-prod:14268/api/traces

# SSL Configuration (if needed)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# External Services
EXTERNAL_API_BASE_URL=https://api.vertikon.com
EXTERNAL_WEBHOOK_URL=https://webhooks.vertikon.com/inventory

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
JAEGER_ENABLED=true

# Feature Flags
FEATURE_NEW_RESERVATION_API=true
FEATURE_BATCH_MANAGEMENT=true
FEATURE_DISTRIBUTED_LOCKING=true
FEATURE_ADVANCED_MONITORING=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=10000

# Worker Configuration
WORKER_POOL_SIZE=50
WORKER_QUEUE_SIZE=1000

package cache

import "sync"

// Cache stores recent agent responses.
type Cache struct {
	mu   sync.RWMutex
	data map[string]string
}

func NewCache() *Cache {
	return &Cache{data: make(map[string]string)}
}

func (c *Cache) key(agent, input string) string {
	return agent + "::" + input
}

func (c *Cache) Get(agent, input string) (string, bool) {
	c.mu.RLock()
	defer c.mu.RUnlock()
	v, ok := c.data[c.key(agent, input)]
	return v, ok
}

func (c *Cache) Put(agent, input, output string) {
	c.mu.Lock()
	defer c.mu.Unlock()
	c.data[c.key(agent, input)] = output
}

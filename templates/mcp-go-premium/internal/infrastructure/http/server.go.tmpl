package http

import (
	"net/http"

	"github.com/labstack/echo/v4"

	"{{ .ModulePath }}/internal/core/engine"
)

// RegisterRoutes wires core engine with HTTP adapters.
func RegisterRoutes(e *echo.Echo, engineSvc *engine.Engine) {
	e.GET("/v1/agents/:name/execute", func(c echo.Context) error {
		agent := c.Param("name")
		input := c.QueryParam("input")
		resp, err := engineSvc.Execute(c.Request().Context(), agent, input)
		if err != nil {
			return c.JSON(http.StatusBadRequest, map[string]string{"error": err.Error()})
		}
		return c.JSON(http.StatusOK, map[string]string{"output": resp})
	})
}

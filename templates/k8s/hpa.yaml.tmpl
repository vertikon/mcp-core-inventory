apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: {{ .ServiceName }}-hpa
  namespace: {{ .Namespace }}
  labels:
    app: {{ .ServiceName }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: {{ .ServiceName }}
  minReplicas: {{ .MinReplicas | default "2" }}
  maxReplicas: {{ .MaxReplicas | default "10" }}
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 70
  - type: Resource
    resource:
      name: memory
      target:
        type: Utilization
        averageUtilization: 80
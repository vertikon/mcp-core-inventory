apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ .ServiceName }}-config
  namespace: {{ .Namespace }}
  labels:
    app: {{ .ServiceName }}
data:
  config.yaml: |
    service:
      name: {{ .ServiceName }}
      environment: {{ .Environment }}
      port: {{ .Port }}
    
    logging:
      level: info
      format: json
    
    database:
      host: db-service
      port: 5432
      name: {{ .ServiceName }}_db
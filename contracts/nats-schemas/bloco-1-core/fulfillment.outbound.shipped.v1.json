{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.vertikon.com/bloco-1-core/fulfillment.outbound.shipped.v1.json",
  "title": "fulfillment.outbound.shipped.v1",
  "type": "object",
  "required": [
    "event_id",
    "order_id",
    "destination",
    "carrier",
    "tracking_code",
    "items",
    "shipped_at",
    "trace_id"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "order_id": {
      "type": "string"
    },
    "destination": {
      "type": "string"
    },
    "carrier": {
      "type": "string"
    },
    "tracking_code": {
      "type": "string"
    },
    "priority": {
      "type": "integer",
      "minimum": 0
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["sku", "quantity"],
        "properties": {
          "sku": { "type": "string" },
          "quantity": { "type": "integer", "minimum": 1 },
          "batch_code": { "type": "string" }
        }
      }
    },
    "shipped_at": {
      "type": "string",
      "format": "date-time"
    },
    "trace_id": {
      "type": "string"
    },
    "correlation_id": {
      "type": "string"
    }
  }
}
